{
  "name": "nextjs-frontend",
  "type": "frontend",
  "version": "1.0.0",
  "build_command": "npm run build",
  "start_command": "npm run dev",
  "install_command": "npm install",
  "health_endpoint": "http://localhost:3000",
  "log_location": "./logs/nextjs.log",
  "port": 3000,
  "envs": [
    {
      "name": "dev",
      "url": "http://localhost:3000",
      "config_file": ".env.local"
    },
    {
      "name": "prod",
      "url": "https://nextjs-app.example.com",
      "config_file": ".env.production"
    }
  ],
  "error_patterns": [
    {
      "pattern": "ERROR.*Failed to compile",
      "severity": "high",
      "description": "Next.js compilation error"
    },
    {
      "pattern": "ModuleNotFoundError",
      "severity": "medium",
      "description": "Missing module dependency"
    },
    {
      "pattern": "EADDRINUSE.*3000",
      "severity": "medium",
      "description": "Port 3000 already in use"
    }
  ],
  "available_actions": [
    {
      "name": "restart_nextjs",
      "command": "pkill -f 'npm run dev' && npm run dev &",
      "risk_level": "safe"
    },
    {
      "name": "clear_next_cache",
      "command": "rm -rf .next && npm run dev &",
      "risk_level": "medium"
    },
    {
      "name": "reinstall_deps",
      "command": "rm -rf node_modules && npm install",
      "risk_level": "medium"
    }
  ]
}